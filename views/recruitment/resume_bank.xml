<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_resume_bank_tree" model="ir.ui.view">
        <field name="name">resume.bank.tree</field>
        <field name="model">resume.bank</field>
        <field name="arch" type="xml">
            <tree string="Resume Bank">
                <field name="name"/>
                <field name="from_date"/>
                <field name="till_date"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_resume_bank_form" model="ir.ui.view">
        <field name="name">resume.bank.form</field>
        <field name="model">resume.bank</field>
        <field name="arch" type="xml">
            <form string="Resume Bank">
                <sheet>
                    <div id="s_header">
                        <h1>Resume Bank</h1>
                    </div>
                    <div id="p_header">
                        <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    </div>
                    <div>
                        <field name="image" widget="image" class="oe_avatar oe_left"/>
                    </div>
                    <div style="margin-left: 100px;">
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline" modifiers="{'required': true}"/>
                            </h1>
                            <h2><field name="candidate_uid"/></h2>
                        </div>
                    </div>
                    <group col="4">
                        <field name="date"/>
                        <field name="department_id"/>
                        <field name="position_id"/>
                        <field name="resume"/>
                    </group>
                    
                    <group>
                        <group string="Contact Details">
                            <field name="email"/>
                            <field name="mobile"/>
                            <field name="alternate_contact"/>
                        </group>
                        <group string="Personnel Details">
                            <field name="dob"/>
                            <field name="age"/>
                            <field name="marital_status"/>
                            <field name="gender"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Qualification">
                            <field name="qualification_ids"/>
                        </page>
                        <page string="Experience">
                            <field name="experience_ids">
                                <tree editable="bottom">

                                </tree>
                            </field>
                        </page>
                        <page string="Attachment">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_resume_bank" model="ir.actions.act_window">
        <field name="name">Resume Bank</field>
        <field name="res_model">resume.bank</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>