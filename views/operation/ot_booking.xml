<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hos_operation_booking_tree" model="ir.ui.view">
        <field name="name">hos.operation.booking.tree</field>
        <field name="model">hos.operation</field>
        <field name="arch" type="xml">
            <tree string="OT Booking">
                <field name="date"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hos_operation_booking_form" model="ir.ui.view">
        <field name="name">hos.operation.booking.form</field>
        <field name="model">hos.operation</field>
        <field name="arch" type="xml">
            <form string="OT Booking">
                <sheet>
                    <div id="s_header">
                        <h1>OT Booking</h1>
                    </div>
                    <group>
                        <field name="date"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hos_operation_booking" model="ir.actions.act_window">
        <field name="name">OT Booking</field>
        <field name="res_model">hos.operation</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hos_operation_booking_tree"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_hos_operation_booking_form">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hos_operation_booking_form" />
        <field name="act_window_id" ref="action_hos_operation_booking"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_hos_operation_booking_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_hos_operation_booking_tree"/>
        <field name="act_window_id" ref="action_hos_operation_booking"/>
    </record>

</odoo>
