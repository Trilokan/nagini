<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hos_appointment_ot_tree" model="ir.ui.view">
        <field name="name">hos.appointment.ot.tree</field>
        <field name="model">hos.appointment</field>
        <field name="arch" type="xml">
            <tree string="Operation Theater">
                <field name="employee_id"/>
                <field name="person_id"/>
                <field name="appointment_time"/>
                <field name="appointment_type"/>
                <field name="ot_id"/>
                <field name="reason"/>
                <field name="comment"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hos_appointment_ot_form" model="ir.ui.view">
        <field name="name">hos.appointment.ot.form</field>
        <field name="model">hos.appointment</field>
        <field name="arch" type="xml">
            <form string="Operation Theater">
                <sheet>
                    <div id="s_header">
                        <h1>Operation Theater</h1>
                    </div>
                    <div id="p_header">
                        <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    </div>
                    <group col="4">
                        <field name="appointment_time"/>
                        <field name="appointment_type"/>
                        <field name="employee_id"/>
                        <field name="person_id"/>
                        <field name="ot_id"/>
                        <field name="reason"/>
                        <field name="comment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action-->
    <record id="action_hos_appointment_ot" model="ir.actions.act_window">
        <field name="name">Operation Theater</field>
        <field name="res_model">hos.appointment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('schedule_type', '=', 'ot')]</field>
        <field name="context">{'default_schedule_type': 'ot'}</field>
        <field name="view_id" ref="view_hos_appointment_ot_tree"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_hos_appointment_ot_form">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hos_appointment_ot_form" />
        <field name="act_window_id" ref="action_hos_appointment_ot"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_hos_appointment_ot_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_hos_appointment_ot_tree"/>
        <field name="act_window_id" ref="action_hos_appointment_ot"/>
    </record>

</odoo>
