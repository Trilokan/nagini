<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hos_appointment_meetings_tree" model="ir.ui.view">
        <field name="name">hos.appointment.meetings.tree</field>
        <field name="model">hos.appointment</field>
        <field name="arch" type="xml">
            <tree string="Meetings">
                <field name="employee_id" string="Doctor/ Staff"/>
                <field name="person_id" sttring="Meetings with"/>
                <field name="appointment_time"/>
                <field name="appointment_type"/>
                <field name="reason"/>
                <field name="comment"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hos_appointment_meetings_form" model="ir.ui.view">
        <field name="name">hos.appointment.meetings.form</field>
        <field name="model">hos.appointment</field>
        <field name="arch" type="xml">
            <form string="Meetings">
                <sheet>
                    <div id="s_header">
                        <h1>Meetings</h1>
                    </div>
                    <div id="p_header">
                        <field name="progress" widget="statusbar" style="float: right;padding: 20px;"/>
                    </div>
                    <group col="4">
                        <field name="appointment_time"/>
                        <field name="appointment_type"/>
                        <field name="employee_id" string="Doctor/ Staff"/>
                        <field name="person_id" sttring="Meetings with"/>
                    </group>
                    <group>
                        <field name="reason"/>
                        <field name="comment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action-->
    <record id="action_hos_appointment_meetings" model="ir.actions.act_window">
        <field name="name">Meetings</field>
        <field name="res_model">hos.appointment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('appointment_type', '=', 'meetings')]</field>
        <field name="context">{'default_appointment_type': 'meetings'}</field>
        <field name="view_id" ref="view_hos_appointment_meetings_tree"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_hos_appointment_meetings_form">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hos_appointment_meetings_form" />
        <field name="act_window_id" ref="action_hos_appointment_meetings"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_hos_appointment_meetings_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_hos_appointment_meetings_tree"/>
        <field name="act_window_id" ref="action_hos_appointment_meetings"/>
    </record>

</odoo>
