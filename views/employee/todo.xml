<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hos_todo_tree" model="ir.ui.view">
        <field name="name">hos.todo.tree</field>
        <field name="model">hos.todo</field>
        <field name="arch" type="xml">
            <tree string="ToDo's" editable="bottom">
                <field name="date"/>
                <field name="person_id"/>
                <field name="description"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hos_todo" model="ir.actions.act_window">
        <field name="name">ToDo's</field>
        <field name="res_model">hos.todo</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
