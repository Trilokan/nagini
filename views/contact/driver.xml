<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hos_person_driver_tree" model="ir.ui.view">
        <field name="name">hos.person.driver.tree</field>
        <field name="model">hos.person</field>
        <field name="arch" type="xml">
            <tree string="Driver">
                <field name="name"/>
                <field name="person_uid"/>
                <field name="email"/>
                <field name="contact_no"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hos_person_driver_form" model="ir.ui.view">
        <field name="name">hos.person.driver.form</field>
        <field name="model">hos.person</field>
        <field name="arch" type="xml">
            <form string="Driver">
                <sheet>
                    <div id="s_header">
                        <h1>Driver</h1>
                    </div>
                    <div>
                        <field name="image" widget="image" class="oe_avatar oe_left" modifiers="{}"/>
                    </div>
                    <div style="margin-left: 100px;">
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" class="oe_inline" modifiers="{'required': true}"/>
                            </h1>
                            <h2><field name="person_uid"/></h2>
                        </div>
                    </div>
                    <group>

                        <!--Contact Detail-->
                        <group string="Contact Detail">
                            <field name="contact_person"/>
                            <field name="email"/>
                            <field name="contact_no"/>
                        </group>

                        <!--Address-->
                        <group string="Address">
                            <!--<label for="street" string="Address"/>-->
                            <div>
                                <div class="address_format">
                                    <field name="door_no" style="width: 30%" placeholder="Door No..."/>
                                    <field name="building_name" style="width: 70%" placeholder="Building name..."/>
                                </div>
                                <field name="street_1" placeholder="Street 1..."/>
                                <field name="street_2" placeholder="Street 2..."/>
                                <field name="locality" placeholder="Locality..."/>
                                <field name="city" placeholder="City..."/>
                                <field name="landmark" placeholder="Landmark..."/>
                                <div class="address_format">
                                    <field name="country_id" style="width: 45%" placeholder="Country" options="{'create': false, 'create_edit': false}" modifiers="{}"/>
                                    <field name="state_id" style="width: 55%" options="{'create': false, 'create_edit': false}" placeholder="State" modifiers="{}"/>
                                </div>
                                <field name="pin_code" placeholder="ZIP" style="width: 55%"/>
                            </div>
                        </group>

                        <!--Alternate Contact-->
                        <group string="Alternate Contact">
                            <field name="alternate_contact"/>
                            <field name="alternate_email"/>
                            <field name="alternate_contact_no"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action GRN-->
    <record id="action_hos_person_driver" model="ir.actions.act_window">
        <field name="name">Driver</field>
        <field name="res_model">hos.person</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('person_type', '=', 'driver')]</field>
        <field name="view_id" ref="view_hos_person_driver_tree"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_hos_person_driver_form">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hos_person_driver_form" />
        <field name="act_window_id" ref="action_hos_person_driver"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_hos_person_driver_tree">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_hos_person_driver_tree"/>
        <field name="act_window_id" ref="action_hos_person_driver"/>
    </record>


</odoo>