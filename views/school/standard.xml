<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_sch_standard_tree" model="ir.ui.view">
        <field name="name">sch.standard.tree</field>
        <field name="model">sch.standard</field>
        <field name="arch" type="xml">
            <tree string="Standard">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_sch_standard_form" model="ir.ui.view">
        <field name="name">sch.standard.form</field>
        <field name="model">sch.standard</field>
        <field name="arch" type="xml">
            <form string="Standard">
                <sheet>
                    <div id="s_header">
                        <h1>Standard</h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sch_standard" model="ir.actions.act_window">
        <field name="name">Standard</field>
        <field name="res_model">sch.standard</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
