<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Time Management : Shift: General -->
    <record id="time_management_shift_general" model="time.shift">
        <field name="name">Product</field>
        <field name="end_day">current_day</field>
        <field name="total_hours">8</field>
        <field name="from_hours">9</field>
        <field name="from_minutes">30</field>
        <field name="till_hours">17</field>
        <field name="till_minutes">30</field>
    </record>

    <!-- Time Management : Shift: Day -->
    <record id="time_management_shift_day" model="time.shift">
        <field name="name">Day</field>
        <field name="end_day">current_day</field>
        <field name="total_hours">8</field>
        <field name="from_hours">6</field>
        <field name="from_minutes">0</field>
        <field name="till_hours">14</field>
        <field name="till_minutes">0</field>
    </record>

    <!-- Time Management : Shift: Night -->
    <record id="time_management_shift_night" model="time.shift">
        <field name="name">Night</field>
        <field name="end_day">next_day</field>
        <field name="total_hours">8</field>
        <field name="from_hours">22</field>
        <field name="from_minutes">30</field>
        <field name="till_hours">6</field>
        <field name="till_minutes">30</field>
    </record>

    <!-- Time Management : Configuration -->
    <record id="time_management_configuration_full_day" model="time.configuration">
        <field name="half_day">4</field>
        <field name="full_day">8</field>
        <field name="in_time">30</field>
        <field name="out_time">30</field>
    </record>

    <!-- Time Management : Leave Type: Loss Of Pay -->
    <record id="time_management_leave_type_lop" model="leave.type">
        <field name="name">Loss Of Pay</field>
        <field name="code">LOP</field>
    </record>

    <!-- Time Management : Leave Configuration-->
    <record id="time_management_leave_configuration_lop" model="leave.configuration">
        <field name="lop_id" ref="nagini.time_management_leave_type_lop" />
    </record>

</odoo>